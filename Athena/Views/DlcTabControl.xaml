<UserControl x:Class="Athena.Views.DlcTabControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignHeight="400" d:DesignWidth="600"
             >

    <StackPanel Margin="8" HorizontalAlignment="Center" MaxWidth="400">
        <TextBlock Text="DLC Equipment and Weapon Randomizer"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <TextBlock Text="DLC randomization is coming soon. Right now, only vanilla DLC bingo can be launched. Note that this is an early build and there will be bugs or missing features."
                   FontSize="12"
                   TextWrapping="Wrap"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   />

        <Button Content="Randomize"
                Height="40" Width="120"
                Margin="0,80,0,8"
                IsEnabled="False"
                Command="{Binding RandomizeCommand}"
                />

        <Button Content="Launch Elden Ring"
                Height="40" Width="120"
                Command="{Binding LaunchCommand}" />
    </StackPanel>
</UserControl>
