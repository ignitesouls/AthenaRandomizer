<Window x:Class="Athena.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Athena"
        mc:Ignorable="d"
        Title="Athena Randomizer" Height="450" Width="800" ResizeMode="NoResize">
    <Grid>
        <StackPanel Margin="340,120,332,242">
            <RadioButton Name="RadioOptionBase" Content="Base Game Bingo" GroupName="Options"/>
            <RadioButton Name="RadioOptionDlc" Content="DLC Bingo" GroupName="Options"/>
            <RadioButton Name="RadioOptionBaseDlc" Content="Base + DLC Bingo" GroupName="Options"/>
        </StackPanel>
        <Button Name="btnRandomize"
                Content="Randomize"
                Width="120" Height="40"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Click="btnRandomize_Click"
                />
        <Button Name="btnLaunchEldenRing"
                Content="Launch Elden Ring"
                Width="120" Height="40"
                VerticalAlignment="Top"
                HorizontalAlignment="Center"
                Click="btnLaunchEldenRing_Click" Margin="0,242,0,0"
                />
    </Grid>
</Window>
